{
  "name": "recipe-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "bun@1.1.38",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "cd frontend && bun run dev",
    "build": "turbo run build",
    "build:frontend": "turbo run build --filter=@recipe/frontend",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "mobile": "turbo run mobile --filter=@recipe/frontend",
    "store": "turbo run store --filter=@recipe/frontend",
    "generate": "cd backend && bun run generate",
    "encore": "cd backend && encore run"
  },
  "devDependencies": {
    "turbo": "^2.3.3"
  }
}